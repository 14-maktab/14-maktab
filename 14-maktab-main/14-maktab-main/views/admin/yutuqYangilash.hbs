<form action="/14admin/yutuq/edit/{{yutuq.id}}" method="POST" enctype="multipart/form-data">
    <div class="card-body">
        <div class="form-group">
            <label for="yutuqTitle">O'quvchi yoki o'qituvchining ismi</label>
            <input type="text" class="form-control" name="yutuqTitle" id="yutuqTitle" value="{{yutuq.yutuqTitle}}" />
        </div>
        <div class="form-group">
            <label for="yutuqText">O'quvchi yoki o'qituvchi haqida</label>
            <input type="text" class="form-control" name="yutuqText" id="yutuqText" value="{{yutuq.yutuqText}}" />
        </div>
        <div class="img">
            <label for="img">Sertifikat rasmi</label>
            <input type="file" class="form-control" name="img" id="img" value="{{yutuq.img}}" />
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">O'zgartirish</button>
    </div>
</form>