<div class="row justify-content-center">
        <div class="col-md-8">
        {{#if maqola.length}}
        {{#each maqola}}
        <div class="titleBox d-flex">
            <div class="col-4 imgBox" style="margin-right: 50px !important;">
                <a href="/maqolaKo'rish/{{id}}"><img src="images/{{img}}" alt="" class="img" width="100%" height="220"></a>
            </div>
            <div class="col-6" style="margin-right: 30px !important;">
                <div>
                    <a href="/maqolaKo'rish/{{id}}" class="malumot">{{maqolaTitle}} </a>
                    <a href="/maqolaKo'rish/{{id}}">
                        <h2 class="internet">{{maqolaTitle}}</h2>
                    </a>
                </div>
                <div class="posted-on">
                    <p class="maqolaText">{{maqolaText}}</p>
                </div>
            </div>
        </div>
        {{/each}}
        {{/if}}
    </div>
</div>