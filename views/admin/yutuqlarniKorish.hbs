<div class="d-flex flex-wrap">
    {{#if yutuq.length}}
    {{#each yutuq}}
    <div class="col-lg-4">
        <div class="card text-center" style="padding: 20px;">
            <div class="card-title">
                <div class="box yutuqRead border">
                    <h4>{{yutuqTitle}}</h4>
                    <p>{{yutuqText}}</p>
                    <img src="/images/{{img}}" alt="png" style="width: 100%; height: 200px;">
                </div>
                <div class="box border">
                    <a href="/14admin/yutuq/delete/{{id}}" class="btn btn-danger">O'chirish</a>
                    <a href="/14admin/yutuq/edit/{{id}}" class="btn btn-warning">O'zgartirish</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{/if}}
</div>